<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.empresa.h2_t3_hugo_garcia_p.InicioController">

    <VBox spacing="10" alignment="CENTER">
        <Label style="-fx-font-size: 24px;" text="¿Qué desea hacer?" />
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="inicioButton" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Iniciar Sesión" onAction="#handleInicio" />
            <Button fx:id="registroButton" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Registrarse" onAction="#handleRegistro" />
        </HBox>
    </VBox>

    <VBox spacing="5" alignment="CENTER">
        <Label text="Inicio de Sesión" style="-fx-font-size: 18px;" />
        <GridPane hgap="10" vgap="5">
            <Label text="Nombre de Usuario:" />
            <TextField fx:id="usernameField" promptText="Ingrese su nombre de usuario" GridPane.columnIndex="1" />

            <Label text="Contraseña:" GridPane.rowIndex="1" />
            <PasswordField fx:id="passwordField" promptText="Ingrese su contraseña" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        </GridPane>
    </VBox>

</VBox>
